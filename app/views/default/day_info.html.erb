<% @title= "Day Information" %>
<%= render 'jumbotron' %>

<div class="container">
  <h2 align="center"><%= "#{Date.new(2017,12,6).strftime("%d.%m.%Y")}" %></h2>
  <hr>
  <div id= "table-custom" class="table-responsive">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Course</th>
        <th>Room</th>
        <th>Time</th>
      </tr>
      </thead>
      <tbody>
      <% @lessons.each do |lesson| %>
            <tr>
              <td><%= lesson.course.title %>
                <div>
                  <small><%=pluralize(lesson.course.students.count, "student") %></small>
                </div>
              </td>
              <td><%= lesson.room.title %></td>
              <td><%= "#{convert_time(lesson.start_at)} - #{convert_time(lesson.end_at)}" %></td>
            </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
