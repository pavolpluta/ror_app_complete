<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if logged_in? %>
    <% @title = "Admin" %>
  <% end %>
  <%= render 'layouts/navigation' %>
  <%= render 'layouts/messages' %>
    <%= yield %>
  </body>
</html>
