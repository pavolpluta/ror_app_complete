<%= render 'shared/errors', obj: @course %>

<%= simple_form_for([:admin, @course], :html => {class: "form-horizontal custom-width center-block", role: "form"}) do |f| %>
  <div class="form-inputs">
    <%= f.input :title, label: "Name of a Course", autofocus: true %>
    <%= f.input :code, placeholder: "Example: JSE" %>
    <%= f.input :study_type %>
    <%= f.input :language %>
  </div>

  <div class="form-actions text-center">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<div class="help-block">
  <%= link_to "Return to all courses", admin_courses_path, class: "pull-left" %>
</div>