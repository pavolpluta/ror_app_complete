<%= render 'shared/errors', obj: @student %>

  <%= simple_form_for([:admin, @student], :html => {class: "form-horizontal custom-width center-block", role: "form"}) do |f| %>
    <div class="form-inputs">
      <%= f.input :first_name, label: "Student's first name", autofocus: true %>
      <%= f.input :last_name, label: "Student's last name" %>
      <%= f.input :email %>
      <%= f.input :study_type %>
      <%= f.association :courses, as: :check_boxes%>
    </div>

    <div class="form-actions text-center">
      <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

<div>
<%= link_to 'Return to Student', admin_student_path(@student) if @student.id %>
  <%= link_to "Return to all students", admin_students_path, class: "pull-right" %>
</div>