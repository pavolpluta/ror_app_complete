<%= render 'shared/errors', obj: @teacher %>

<%= simple_form_for([:admin, @teacher], :html => {class: "form-horizontal custom-width center-block", role: "form"}) do |f| %>
  <div class="form-inputs">
    <%= f.input :first_name, label: "Teacher's first name", autofocus: true %>
    <%= f.input :last_name, label: "Teacher's last name" %>
    <%= f.input :email %>
    <%= f.association :courses, as: :check_boxes%>
  </div>

  <div class="form-actions text-center">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<div>
  <%= link_to "Return to Teacher", admin_teacher_path(@teacher) if @teacher.id %>
  <%= link_to "Return to all Teachers", admin_teachers_path, class: "pull-right" %>
</div>