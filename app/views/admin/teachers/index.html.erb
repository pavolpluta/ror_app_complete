<div class="container">
  <div class="row">

    <h1 align="left">Teachers: <%= @teachers.count %> <%= link_to "Create new teacher", new_admin_teacher_path,
                                                                  class: "btn btn-success btn-lg pull-right" %></h1>
    &nbsp;
  </div>
  <form class="form-inline">
    <div class="form-group">
      <%= form_tag(admin_teachers_path, :method => "get") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search for a teacher...", class: "form-control"%>
        <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
      <% end %>
    </div>
  </form>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
      </thead>
      <% @teachers.each do |teacher| %>
        <tbody>
        <tr>
          <td><%= link_to teacher.first_name + " " + teacher.last_name, admin_teacher_path(teacher) %></td>
          <td><%= teacher.email %></td>
        </tr>
        </tbody>
      <% end %>
    </table>
  </div>
  <div class=" col-sm-12 text-center">
    <%= will_paginate class: "text-center" %>
    <%= link_to "Return to Dashboard", admin_root_path %>
  </div>
</div>