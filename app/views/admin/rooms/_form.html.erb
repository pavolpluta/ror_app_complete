<%= render 'shared/errors', obj: @room %>

<%= simple_form_for([:admin, @building, @room], :html => {class: "form-horizontal custom-width center-block", role: "form"}) do |f| %>
  <div class="form-inputs">
    <%= f.input :title, label: "Name of a Room", autofocus: true %>
    <%= f.input :code, placeholder: "Example: 1.1" %>
  </div>

  <div class="form-actions text-center">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<div class="help-block">
  <%= link_to "Return to building", admin_building_path(@building), class: "pull-left" %>
</div>